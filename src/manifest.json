{
  "package": "com.broswer.demo",
  "name": "预感浏览器",
  "versionName": "1.0.0",
  "versionCode": "3",
  "minPlatformVersion": "101",
  "icon": "/common/logo.png",
  "features": [
    {
      "name": "system.prompt"
    },
    {
      "name": "system.router"
    },
    {
      "name": "system.device"
    },
    {
      "name": "system.shortcut"
    },
    {
      "name": "system.barcode"
    },
    {
      "name": "system.webview"
    }
  ],
  "permissions": [
    {
      "origin": "*"
    }
  ],
  "config": {
    "logLevel": "debug"
  },
  "router": {
    "entry": "pages/home",
    "pages": {
      "pages/home": {
        "component": "index"
      },
      "pages/detail": {
        "component": "index"
      },
      "pages/video": {
        "component": "index"
      },
      "pages/collect": {
        "component": "index"
      },
      "pages/user": {
        "component": "index"
      },
      "pages/login": {
        "component": "index"
      },
      "pages/search": {
        "component": "index"
      },
      "pages/frame": {
        "component": "index"
      }
    }
  },
  "display": {
    "titleBarBackgroundColor": "#fff",
    "titleBar": false,
    "titleBarTextColor": "#000000",
    "menu": false,
    "pages": {
      "home": {
        "titleBarBackgroundColor": "#c44944"
      }
    }
  }
}
